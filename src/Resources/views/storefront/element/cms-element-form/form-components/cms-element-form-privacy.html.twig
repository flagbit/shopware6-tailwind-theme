{% sw_extends '@Storefront/storefront/element/form-components/cms-element-form-privacy.html.twig' %}

{% block cms_form_privacy_opt_in %}
    {% block cms_form_privacy_opt_in_title %}
        <div>{{ "general.privacyTitle"|trans }} {{ "general.required"|trans }}</div>
    {% endblock %}

    <div class="block mt-1 privacy-notice custom-control custom-checkbox">
        {% block cms_form_privacy_opt_in_input %}
            <input name="privacy"
                   type="checkbox"
                   class="custom-control-input"
                   id="form-pvivacy-opt-in-{{ _key }}"
                   required>
        {% endblock %}

        {% block cms_form_privacy_opt_in_label %}
            <label for="form-pvivacy-opt-in-{{ _key }}" class=" custom-control-label">
                {{ "general.privacyNotice"|trans({
                    '%url%': path('frontend.cms.page',{ id: shopware.config.core.basicInformation.privacyPage })
                })|raw }}
            </label>
        {% endblock %}
    </div>
{% endblock %}
