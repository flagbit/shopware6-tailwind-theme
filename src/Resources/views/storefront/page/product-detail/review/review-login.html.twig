{% sw_extends '@Storefront/storefront/page/product-detail/review/review-login.html.twig' %}

{% block component_account_login_header %}
	<h2 class="mb-3">
		{{ "detail.reviewLoginHeader"|trans|sw_sanitize }}
	</h2>
{% endblock %}

{% block component_account_login_form_description %}
	<p class="login-form-description">
		{{ "detail.reviewLoginDescription"|trans|sw_sanitize }}
		<a href="{{ path('frontend.account.login.page') }}"
		   title="{{ "detail.reviewRegisterLink"|trans|striptags }}">
            {{ "detail.reviewRegisterLink"|trans|sw_sanitize }}
		</a>
	</p>
{% endblock %}

{% block component_account_login_form_redirect %}
	<input type="hidden"
           name="redirectTo"
           value="frontend.detail.page">

	<input type="hidden"
		   name="redirectParameters"
		   value='{"productId": "{{ reviews.productId }}"}'>
{% endblock %}

{% block component_account_login_submit %}
	<div class="float-left">
		{{ parent() }}
	</div>
	<div class="login-cancel">
		{% block page_product_detail_review_form_cancel %}
			<a href="#"
			   class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline text-gray-600 border-gray-600 hover:bg-gray-600 hover:text-white bg-white hover:bg-gray-700 ml-1"
			   data-toggle="collapse"
			   data-target=".multi-collapse"
			   aria-expanded="false"
			   aria-controls="review-form review-list">
				{{ "detail.reviewLoginCancelButton"|trans|sw_sanitize }}
			</a>
		{% endblock %}
	</div>
{% endblock %}
